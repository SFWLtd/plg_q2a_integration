<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0.0" type="plugin" group="q2a">
    <name>Question2Answer Integration</name>
    <author>SFW Ltd</author>
    <creationDate>2016-03-03</creationDate>
    <copyright>Copyright (C) 2016 SFW Ltd.</copyright>
    <license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>simonc@sfwltd.co.uk</authorEmail>
    <authorUrl>http://www.sfwltd.co.uk/</authorUrl>
    <version>1.0.0</version>
    <releaseDate>2016-03-03</releaseDate>
    <releaseType>Stable Release</releaseType>
    <description>Integration for Question2Answer</description>
    <files>
        <filename>index.html</filename>
        <filename plugin="qaintegration">qaintegration.php</filename>
        <filename>qa-external/qa-external-users.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="view_q2a"  type="accesslevel" label="Access for viewing Q2A" />
                <field name="post_q2a"  type="accesslevel" label="Access for posting to Q2A" />
                <field name="edit_q2a"  type="accesslevel" label="Access for editing Q2A" />
                <field name="mod_q2a"   type="accesslevel" label="Access for moderating Q2A" />
                <field name="admin_q2a" type="accesslevel" label="Access for admin Q2A" />
                <field name="super_q2a" type="accesslevel" label="Access for superuser in Q2A" />
            </fieldset>
            <fieldset name="advanced">
                <field name="urls_info" type="spacer" class="text" label="The following URLs are used for links and redirects by Q2A or by this plugin. They should all exist as valid pages within Joomla." />
                <field name="login_url"  type="text" label="Login URL" default="/login.html" />
                <field name="logout_url" type="text" label="Logout URL" default="/logout.html" />
                <field name="reg_url"    type="text" label="Registration URL" default="/register.html" />
                <field name="denied_url" type="text" label="Redirect when denied access" default="/" />
            </fieldset>
        </fields>
    </config>
</extension>